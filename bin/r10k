#!/bin/bash
BASEDIR=$(dirname $(dirname $(realpath $0)))
CODEDIR="${BASEDIR}/code"
CONFDIR="${BASEDIR}/config"
if [ ! -e /tmp/github_host_key ]; then
  ssh-keyscan github.com 2>/dev/null 1>/tmp/github_host_key
fi
docker run --rm \
  --user root \
  -e SSH_AUTH_SOCK=$SSH_AUTH_SOCK \
  -v $SSH_AUTH_SOCK:$SSH_AUTH_SOCK \
  -v r10k_cache:/var/cache/r10k \
  -v /tmp/github_host_key:/root/.ssh/known_hosts \
  -v ${CODEDIR}:/etc/puppetlabs/code \
  -v ${CONFDIR}/r10k.yaml:/etc/puppetlabs/r10k/r10k.yaml \
  -it puppet/r10k $@
